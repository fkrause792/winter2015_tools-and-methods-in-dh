.slider {
	max-width:100%;
	max-height: 100%;
	border-radius: 4px;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
	overflow:hidden;
	
	.carousel-indicators {
		margin: 0;
		top: 30px;
		bottom: initial;
		right: 20px;
		height: 20px;
	}
	
	.item.active {
		padding-top: 75px;
		background-color: #222;
		img {
			margin: 0 auto;
		}
		
		.carousel-caption {
			position: absolute;
			top: 0;
			bottom: initial;
			left: 30px;
			text-align: left;
		}
	}
	
	#carousel-logo {
		.carousel-indicators, .carousel-caption {display: none;}
		.item.active {padding: 15px 0;}
	}
}

